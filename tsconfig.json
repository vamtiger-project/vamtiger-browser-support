{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitHelpers": true
    },
    "include": [
        "source/**/*"
    ]
}